{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/frontend/*": [
        "frontend/*"
      ],
      "@/backend/*": [
        "backend/*"
      ],
      "@/app/*": [
        "app/*"
      ],
      "@/components/*": [
        "frontend/components/*"
      ],
      "@/ui/*": [
        "frontend/components/ui/*"
      ],
      "@/hooks/*": [
        "frontend/hooks/*"
      ],
      "@/lib/*": [
        "frontend/lib/*"
      ],
      "@/auth": [
        "frontend/auth.ts"
      ],
      "@/auth.config": [
        "frontend/auth.config.ts"
      ]
    },
    "types": [
      "node",
      "@types/pdf-parse"
    ]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "app/**/*.ts",
    "app/**/*.tsx",
    "backend/**/*.ts",
    "backend/**/*.tsx",
    "frontend/**/*.ts",
    "frontend/**/*.tsx",
    "next-env.d.ts",
    "types/**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src"
  ]
}
