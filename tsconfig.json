
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/app/*": ["app/*"],
      "@/frontend/*": ["frontend/*"],
      "@/backend/*": ["backend/*"],
      "@/components/*": ["frontend/components/*"],
      "@/hooks/*": ["frontend/hooks/*"],
      "@/lib/*": ["frontend/lib/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "app/**/*.ts",
    "app/**/*.tsx",
    "frontend/**/*.ts",
    "frontend/**/*.tsx",
    "backend/**/*.ts",
    "backend/**/*.tsx"
  ],
  "exclude": ["node_modules", "src"]
}
